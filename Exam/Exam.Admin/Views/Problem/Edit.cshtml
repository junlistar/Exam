@{
    ViewBag.Title = "问题编辑";
}
@model Exam.Admin.Models.ProblemVM
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        分组编辑 <small>添加、修改</small>
                    </h5>
                </div>
                <div class="ibox-content">
                    <form id="from" class="form-horizontal">
                        <input type="hidden" class="form-control" name="id" id="id" value="@Model.Problem.ProblemId">
                        <div class="hr-line-dashed"></div>
                        
                        <div class="form-group">
                            <label class="col-sm-2 control-label">所属层级</label>
                            <div class="col-sm-2">
                                <select class="form-control" name="belongId" id="belongId">
                                    <option value="0">请选中层级</option>
                                    @if (Model.Belongs != null && Model.Belongs.Count > 0)
                                    {
                                        foreach (var a in Model.Belongs)
                                        {
                                            <option @(Model.Problem.BelongId == a.BelongId ? "selected" : "") value="@a.BelongId">@a.Title</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">题目章节</label>
                            <div class="col-sm-2">
                                <select class="form-control" name="chapterId" id="chapterId">
                                    <option value="0">请选中章节</option>
                                    @if (Model.Chapters != null && Model.Chapters.Count > 0)
                                    {
                                        foreach (var a in Model.Chapters)
                                        {
                                            <option @(Model.Problem.ChapterId == a.ChapterId ? "selected" : "") value="@a.ChapterId">@a.Title</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">题目类型</label>
                            <div class="col-sm-2">
                                <select class="form-control" name="problemCategoryId" id="problemCategoryId">
                                    <option value="0">请选中类型</option>
                                    @if (Model.ProblemCategorys != null && Model.ProblemCategorys.Count > 0)
                                    {
                                        foreach (var a in Model.ProblemCategorys)
                                        {
                                            <option @(Model.Problem.ProblemCategoryId == a.ProblemCategoryId ? "selected" : "") value="@a.ProblemCategoryId">@a.Title</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">题目分类</label>
                            <div class="col-sm-2">
                                <select class="form-control" name="subjectInfoId" id="subjectInfoId">
                                    <option value="0">请选中分类</option>
                                    @if (Model.SubjectInfos != null && Model.SubjectInfos.Count > 0)
                                    {
                                        foreach (var a in Model.SubjectInfos)
                                        {
                                            <option @(Model.Problem.SubjectInfoId == a.SubjectInfoId ? "selected" : "") value="@a.SubjectInfoId">@a.Title</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">题目名称</label>
                            <div class="col-sm-4">
                                <input type="text" name="name" id="name" class="form-control" placeholder="请输入名称" value="@(Model.Problem.Title ?? "")">
                            </div> 
                            @*<button id="btnTopic" class="btn btn-sm btn-primary" type="button">添加答案</button>*@
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">是否热门</label>
                            <div class="col-sm-4">
                                <select class="form-control inline" style="width:150px;" name="advertisementTypeId" id="divIsHot">
                                    <option value="0" @(Model.Problem.IsHot == 0 ? "selected" : "")>否</option>
                                    <option value="1" @(Model.Problem.IsHot == 1 ? "selected" : "")>是</option>
                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">排序号</label>
                            <div class="col-sm-2">
                                <input type="number" name="sortNo" id="sortNo" class="form-control" placeholder="请输入排序号" value="@Model.Problem.Sort">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btnSave" class="btn btn-primary" type="button">保存内容</button>
                                <a class="btn btn-white" href="javascript:history.go(-1);">取消</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section script{
    <script src="@("/Scripts/ViewJs/Problem/ProblemEdit.js"+Versions.Ver)"></script>
}
